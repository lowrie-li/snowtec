<?xml version="1.0" encoding= "UTF-8" ?>
<!DOCTYPE struts PUBLIC
     "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
     "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.locale" value="zh_CN" />
	<constant name="struts.i18n.encoding" value="utf-8" />
	<package name="default" namespace="/" extends="struts-default">
		<default-action-ref name="login" />
<!--  		<global-results>
			<result name="error">/failed.jsp </result>
			<result name="success">/success.jsp </result>
		</global-results> -->
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings> 
		<action name="ajaxAction" class="com.snowtec.AjaxAction" method="json">
			<result name="success">/success.jsp</result>
		</action>
				<action name="addCustomer" class="com.snowtec.AjaxAction" method="add">
			<result name="success">/success.jsp</result>
		</action>
		<action name="searchCustomer" class="com.snowtec.AjaxAction" method="search">
			<result name="success">/success.jsp</result>
		</action>
		<action name="updateCustomer" class="com.snowtec.AjaxAction" method="update">
			<result name="success">/success.jsp</result>
		</action>
		<action name="deleteCustomer" class="com.snowtec.AjaxAction" method="delete">
			<result name="success">/success.jsp</result>
		</action>
		<action name="loginAction" class="com.snowtec.LoginAction" method="execute">
			<result name="success">/workboard.jsp</result>
		</action>
		<action name="registerAction" class="com.snowtec.RegisterAction" method="execute">
			<result name="success">/login.jsp</result>
		</action>
	</package>

	<!-- <include file="example.xml" /> -->
	<!-- Add packages here -->

</struts>
